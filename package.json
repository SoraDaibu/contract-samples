{
  "name": "contracts-hardhat",
  "version": "1.0.0",
  "description": "contracts with hardhat",
  "repository": "https://github.com/SoraDaibu/contract-samples.git",
  "author": "Sora Daibu",
  "license": "MIT",
  "scripts": {
    "test": "npx hardhat test",
    "strict-test": "npx hardhat test --typecheck",
    "compile": "npx hardhat compile",
    "build": "yarn build:sol --force && yarn build:ts && yarn build:declarations",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:sol": "npx hardhat compile",
    "build:declarations": "shx cp typechain/*.d.ts dist/typechain",
    "prepare": "yarn build",
    "hardhat": "npx hardhat",
    "task:run-local": "npx hardhat run-local",
    "task:accounts": "npx hardhat accounts",
    "task:deploy": "npx hardhat deploy",
    "task:deploy-and-configure": "npx hardhat deploy-and-configure",
    "task:verify": "npx hardhat verify"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.1.0",
    "@openzeppelin/contracts-upgradeable": "^4.1.0",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.5",
    "@types/express": "^4.17.11",
    "@types/prompt": "^1.1.0",
    "base64-sol": "^1.0.1",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.4.4",
    "hardhat": "^2.9.6",
    "hardhat-abi-exporter": "^2.9.0",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier-plugin-solidity": "^1.0.0-beta.12",
    "prompt": "^1.1.0",
    "shx": "^0.3.3",
    "solidity-coverage": "0.7.21",
    "ts-node": "^10.0.0",
    "typechain": "^8.0.0"
  },
  "dependencies": {
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "ethers": "^5.6.8",
    "latest": "^0.2.0",
    "typescript": "^5.1.6"
  }
}
